<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Animal</title>
    <link rel="stylesheet" href="/styles/Home.css">
    <link rel="stylesheet" href="/styles/editarAn.css">
</head>

<body>
<div class="container">

    <div class="header">
        <h1>九勇 Editar Animal</h1>
        <p>Modifica la informaci칩n del animal seleccionado</p>
    </div>

    <a href="/" class="btn btn-secondary">拘勇 Volver</a>

    <form action="/animales/editar/<%= animal.ID %>" method="POST" enctype="multipart/form-data">

        <label>Nombre:</label>
        <input type="text" name="nombre" value="<%= animal.Nombre %>" required>

        <label>Nombre Cient칤fico:</label>
        <input type="text" name="nombreCientifico" value="<%= animal.NombreCientifico %>" required>

        <label>Descripci칩n:</label>
        <textarea name="descripcion"><%= animal.Descripcion %></textarea>

        <label>Clasificaci칩n:</label>
        <select name="clasificacion_ID" required>
            <% clasificaciones.forEach(c => { %>
                <option value="<%= c.ID %>" <%= c.ID == animal.Clasificacion_ID ? 'selected' : '' %>><%= c.Subtipo %></option>
            <% }) %>
        </select>

        <label>H치bitat:</label>
        <select name="habitat_id" required>
            <% habitats.forEach(h => { %>
                <option value="<%= h.ID %>" <%= h.ID == animal.Habitat_ID ? 'selected' : '' %>>
                    <%= h.Tipo %> - <%= h.Subtipo %>
                </option>
            <% }) %>
        </select>

        <label>Clima:</label>
        <select name="clima_id" required>
            <% climas.forEach(c => { %>
                <option value="<%= c.ID %>" <%= c.ID == animal.Clima_ID ? 'selected' : '' %>>
                    <%= c.Clima %>
                </option>
            <% }) %>
        </select>

        <label>Alimentaci칩n:</label>
        <select name="alimentacion_ID" required>
            <% alimentaciones.forEach(t => { %>
                <option value="<%= t.ID %>" <%= t.ID == animal.Alimentacion_ID ? 'selected' : '' %>>
                    <%= t.Tipo %>
                </option>
            <% }) %>
        </select>

        <label>Reproducci칩n:</label>
        <select name="reproduccion_id" required>
            <% reproducciones.forEach(r => { %>
                <option value="<%= r.ID %>" <%= r.ID == animal.Reproduccion_ID ? 'selected' : '' %>>
                    <%= r.Tipo %>
                </option>
            <% }) %>
        </select>

        <label>Tiempo de vida m칤nimo (a침os):</label>
        <input type="number" name="tiempoVidaMin" value="<%= animal.TiempoVidaMin %>">

        <label>Tiempo de vida m치ximo (a침os):</label>
        <input type="number" name="tiempoVidaMax" value="<%= animal.TiempoVidaMax %>">

        <label>Imagen principal:</label>
        <% if (animal.Imagen) { %>
            <p>Imagen actual:</p>
            <img src="/images/animales/<%= animal.Imagen %>" width="150" style="margin-bottom:10px;">
        <% } %>

        <input type="file" name="imagen">

        <button type="submit" class="btn btn-primary">游 Guardar Cambios</button>
    </form>

</div>
</body>
</html>
