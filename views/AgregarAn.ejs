<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Nuevo Animal - Biblioteca Animal</title>
    <link rel="stylesheet" href="/styles/Home.css">
    <link rel="stylesheet" href="/styles/AgregarAn.css">
</head>

<body>
    <div class="container">
        <div class="header-actions">
            <h1>‚ûï Agregar Nuevo Animal</h1>
            <a href="/" class="btn btn-secondary">‚Ü©Ô∏è Volver al Inicio</a>
        </div>

        <div class="form-container">
            <form action="/animales/nuevo" method="POST" enctype="multipart/form-data">

                <div class="form-row">
                    <div class="form-group">
                        <label for="nombre">Nombre Com√∫n *</label>
                        <input type="text" id="nombre" name="nombre" placeholder="Ej. Le√≥n" required>
                    </div>

                    <div class="form-group">
                        <label for="nombreCientifico">Nombre Cient√≠fico *</label>
                        <input type="text" id="nombreCientifico" name="nombreCientifico" placeholder="Ej. Panthera leo" required style="font-style: italic;">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="clasificacion">Clasificaci√≥n *</label>
                        <select id="clasificacion" name="clasificacion_id" required>
                            <option value="">Seleccione una clasificaci√≥n...</option>
                            <% clasificaciones.forEach(c => { %>
                                <option value="<%= c.ID %>"><%= c.Tipo %> - <%= c.Subtipo %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="habitat">H√°bitat *</label>
                        <select id="habitat" name="habitat_id" required>
                            <option value="">Seleccione un h√°bitat...</option>
                            <% habitats.forEach(h => { %>
                                <option value="<%= h.ID %>"><%= h.Tipo %> - <%= h.Subtipo %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="clima">Clima Preferido *</label>
                        <select id="clima" name="clima_id" required>
                            <option value="">Seleccione un clima...</option>
                            <% climas.forEach(c => { %>
                                <option value="<%= c.ID %>"><%= c.Clima %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="alimentacion">Tipo de Alimentaci√≥n *</label>
                        <select id="alimentacion" name="alimentacion_id" required>
                            <option value="">Seleccione alimentaci√≥n...</option>
                            <% alimentaciones.forEach(a => { %>
                                <option value="<%= a.ID %>"><%= a.Tipo %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="reproduccion">Tipo de Reproducci√≥n *</label>
                        <select id="reproduccion" name="reproduccion_id" required>
                            <option value="">Seleccione reproducci√≥n...</option>
                            <% reproducciones.forEach(r => { %>
                                <option value="<%= r.ID %>"><%= r.Tipo %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Tiempo de Vida (A√±os)</label>
                        <div style="display: flex; gap: 10px;">
                            <input type="number" name="tiempoVidaMin" placeholder="M√≠n" min="0" step="0.1">
                            <input type="number" name="tiempoVidaMax" placeholder="M√°x" min="0" step="0.1">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="descripcion">Descripci√≥n</label>
                    <textarea id="descripcion" name="descripcion" rows="4" placeholder="Describe las caracter√≠sticas principales del animal..."></textarea>
                </div>

                <div class="form-group">
                    <label for="imagen">Imagen del Animal</label>
                    <input type="file" id="imagen" name="imagen" accept="image/*">
                    <small style="color: #666;">Formatos permitidos: JPG, PNG, GIF</small>
                </div>

                <button type="submit" class="btn-submit">üíæ Guardar Animal</button>
            </form>
        </div>
    </div>
</body>
</html>