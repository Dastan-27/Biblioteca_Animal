<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= animal.Nombre %> - Biblioteca Animal</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/Home.css">
    <link rel="stylesheet" href="/styles/detalle-animal.css">
</head>

<body>
    <div class="container fade-in">

        
        <div class="top-nav">
            <a href="/" class="btn-back">
                <span>‚¨ÖÔ∏è</span> Volver al Listado
            </a>

           <div class="admin-actions">
    <a href="/animales/editar/<%= animal.ID %>" class="btn-edit">‚úèÔ∏è Editar</a>
    
    <form action="/animales/eliminar/<%= animal.ID %>" method="POST" style="display: inline;" class="form-eliminar">
        <button type="submit" class="btn-delete" style="cursor: pointer; border: none; font-size: inherit;">üóëÔ∏è Eliminar</button>
    </form>
</div>
        </div>
        <!-- üî• FIN TOP NAV -->

        <div class="detail-card">
            
            <div class="detail-header">
                <div class="image-container">
                    <% if (animal.Imagen) { %>
                        <img src="/images/animales/<%= animal.Imagen %>" alt="<%= animal.Nombre %>">
                    <% } else { %>
                        <div class="no-image-placeholder">
                            <span>üêæ</span>
                        </div>
                    <% } %>
                </div>
                
                <div class="title-section">
                    <span class="classification-badge">
                        <%= animal.TipoClasificacion %> ‚Ä∫ <%= animal.SubtipoClasificacion %>
                    </span>

                    <h1><%= animal.Nombre %></h1>
                    <h2 class="scientific-name"><%= animal.NombreCientifico %></h2>
                    
                    <div class="quick-tags">
                        <span class="tag diet-tag">üçΩÔ∏è <%= animal.TipoAlimentacion %></span>
                        <span class="tag reproduction-tag">‚ù§Ô∏è <%= animal.TipoReproduccion %></span>
                    </div>
                </div>
            </div>

            <hr class="divider">

            <div class="detail-body">
                
                <!-- DESCRIPCI√ìN -->
                <div class="description-section">
                    <h3>üìñ Descripci√≥n</h3>
                    <p><%= animal.Descripcion ? animal.Descripcion : 'No hay descripci√≥n disponible para este animal.' %></p>
                </div>

                <!-- DATOS DE H√ÅBITAT -->
                <div class="info-grid-section">
                    <h3>üåç Datos del H√°bitat</h3>
                    
                    <div class="info-card">
                        <div class="icon">üåø</div>
                        <div class="data">
                            <label>H√°bitat</label>
                            <span><%= animal.TipoHabitat %> (<%= animal.SubtipoHabitat %>)</span>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="icon">üå°Ô∏è</div>
                        <div class="data">
                            <label>Clima Preferido</label>
                            <span><%= animal.Clima %></span>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="icon">‚è≥</div>
                        <div class="data">
                            <label>Esperanza de Vida</label>
                            <span>
                                <% if (animal.TiempoVidaMin && animal.TiempoVidaMax) { %>
                                    De <%= animal.TiempoVidaMin %> a <%= animal.TiempoVidaMax %> a√±os
                                <% } else if (animal.TiempoVidaMin) { %>
                                    Desde <%= animal.TiempoVidaMin %> a√±os
                                <% } else { %>
                                    Desconocido
                                <% } %>
                            </span>
                        </div>
                    </div>

                </div> <!-- fin info-grid -->
            </div> <!-- fin detail-body -->

        </div> <!-- fin detail-card -->

    </div> <!-- fin container -->
    <script>
    const formEliminar = document.querySelector('.form-eliminar');

    if(formEliminar) {
        formEliminar.addEventListener('submit', function(e) {
            e.preventDefault();
            
            Swal.fire({
                title: '¬øEst√°s seguro?',
                text: "¬°El animal ser√° eliminado permanentemente!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'S√≠, borrar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        });
    }
</script>
</body>
</html>
